{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["import", "vue", "vitest", "promise"],
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "pedantic": "warn",
    "style": "warn",
    "perf": "warn"
  },
  "rules": {
    "arrow-body-style": "off",
    "avoid-new": "off",
    "consistent-test-it": "off",
    "curly": "off",
    "default": "off",
    "default-param-last": "off",
    "eqeqeq": "off",
    "exports-last": "off",
    "func-names": "off",
    "func-style": "off",
    "group-exports": "off",
    "id-length": "off",
    "init-declarations": "off",
    "max-classes-per-file": "off",
    "max-dependencies": "off",
    "max-depth": "off",
    "max-expects": "off",
    "max-lines": "off",
    "max-lines-per-function": "off",
    "max-params": "off",
    "new-cap": "off",
    "no-anonymous-default-export": "off",
    "no-await-in-loop": "off",
    "no-continue": "off",
    "no-else-return": "off",
    "no-hooks": "off",
    "no-lonely-if": "off",
    "no-magic-numbers": "off",
    "no-mutable-exports": "off",
    "no-named-export": "off",
    "no-namespace": "off",
    "no-negated-condition": "off",
    "no-nested-ternary": "off",
    "no-ternary": "off",
    "no-unassigned-import": "off",
    "no-warning-comments": "off",
    "param-names": "off",
    "prefer-await-to-callbacks": "off",
    "prefer-await-to-then": "off",
    "prefer-default-export": "off",
    "prefer-destructuring": "off",
    "prefer-each": "off",
    "prefer-lowercase-title": "off",
    "prefer-strict-equal": "off",
    "prefer-template": "off",
    "prefer-to-be": "off",
    "promise/always-return": "off",
    "radix": "off",
    "require-hook": "off",
    "require-top-level-describe": "off",
    "require-typed-ref": "off",
    "sort-imports": "off",
    "sort-keys": "off",
    "sort-vars": "off",
    "capitalized-comments": "off",
    "no-inline-comments": "off",
    "max-statements": "off"
  },
  "ignorePatterns": [
    "**/tailwind.config.cjs",
    "**/components.d.ts",
    "**/auto-imports.d.ts",
    "**/vite.config.ts",
    "**/postcss.config.js",
    "**/tailwind.config.js",
    "**/eslint.config.mjs",
    "cmd/frontend/resources/**/*",
    "dashboard/new-dashboard/src/components/common/BranchIcon.vue",
    "dashboard/new-dashboard/src/components/common/SpaceIcon.vue",
    "dashboard/new-dashboard/tests/unit/dataquery.test.js"
  ]
}
